package application;

import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;

import entities.Employees;

public class Program {

	public static void main(String[] args) {
		String name = null;
		int id;
		double salary = 0;
		Scanner sc = new Scanner(System.in);
		System.out.println("How many employess will be registered? ");
		int n = sc.nextInt();
		Employees employees = null;
		List<Employees> salarylist = new ArrayList<>();
		List<String> namelist = new ArrayList<>();
		List<Integer> idlist = new ArrayList<>();
		
		idlist.add(333);
		idlist.add(536);
		idlist.add(772);
		
		for (int i=0; i<n; i++) {
			System.out.println("Employee #" + (i+1));
			System.out.printf("Id:");
			id = sc.nextInt();
			idlist.add(id);
			sc.nextLine();
			System.out.printf("Name: ");
			name = sc.nextLine();
			namelist.add(name);
			System.out.printf("Salary: ");
			salary = sc.nextDouble();
			salarylist.add(salary);
			
		}
		System.out.println("Enter the employee id that will have salary increase: ");
		int idemp = sc.nextInt();
		if (idemp = idlist.equals(idlist)){
			System.out.printf("Enter the porcentage: ");
			double percentage = sc.nextDouble();
			employees.percentageSalary(percentage);
			System.out.println("Updated salary: $" + employees.getSalary());
		}
	
		System.out.println("List of employees: ");
		System.out.println(idlist);
	
		for (Integer idl : idlist) {
			System.out.println(idlist);
		}
		for (String nml : namelist) {
			System.out.println(namelist);
		}
		for (Double sll : salarylist) {
			System.out.println(salarylist);
		}
		
		sc.close();
		

	}

}
