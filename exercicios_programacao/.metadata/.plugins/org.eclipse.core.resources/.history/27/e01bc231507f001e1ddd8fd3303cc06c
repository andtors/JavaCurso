package application;

import java.util.Scanner;

import entities.Persons;

public class Program {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		double amax = 0;
		double amin = 0;
		double val = 0;
		double sum = 0;
		String gen = null;
		System.out.println("QUANTAS PESSOAS SERÃO DIGITADAS? ");
		int n = sc.nextInt();
		
		
		Persons[] vect = new Persons[n];
		
		for (int i = 0; i<vect.length; i++) {
			sc.nextLine();
			System.out.printf("Altura da " + i + "a pessoa:");
			double altura = sc.nextDouble();
			char response = sc.next().charAt(0);
			System.out.println("Genero da " + i  + "a pessoa:");
			char genero = sc.next().charAt(0);
			
			vect[i] = new Persons(altura, genero);
			val = vect[i].getAltura();
			
			gen = vect[i].getGenero();
			
			
			if (amax < val) {
				amax = vect[i].getAltura();
				
			}
			
			if (amin > val) {
				amin = vect[i].getAltura();
				
			}
			
			if (gen == 'f') {
				sum += vect[i].getAltura();
			}
			
		}
		System.out.println("Altura maxima é de:" + amax);
		System.out.println("Altura minima é de : " + amin);
		sc.close();

	}

}
